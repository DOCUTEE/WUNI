<Page x:Class="WUNI.WINDOWS.WorkerPages.PWorkerHistory"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WUNI.WINDOWS.WorkerPages"
      mc:Ignorable="d" 
            d:DesignHeight="900" d:DesignWidth="1200"
      Title="PWorkerHistory">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition />
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Border Grid.Column="0" HorizontalAlignment="Right" Width="20" Margin="0,10,0,10" Background="#EA5455">

            </Border>
            <Label Grid.Column="1" Margin="20,0,0,0" Content="Lịch sử" FontSize="48" VerticalAlignment="Center"></Label>
            <Border Grid.Column="2" Background="LightGray" CornerRadius="10" Margin="250,20,10,20">
                <Button x:Name="btnAnalysis" Click="btnAnalysis_Click" BorderThickness="0" Content="Thống kê" FontSize="26" Background="Transparent">
                    
                </Button>
            </Border>
        </Grid>

        <ScrollViewer Grid.Row="1">

            <UniformGrid x:Name="ufgOrders" Columns="3" >
                
                
            </UniformGrid>
        </ScrollViewer>
    </Grid>
</Page>