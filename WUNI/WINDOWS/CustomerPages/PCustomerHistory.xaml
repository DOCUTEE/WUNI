<Page x:Class="WUNI.WINDOWS.CustomerPages.PCustomerHistory"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WUNI.WINDOWS.CustomerPages"
      mc:Ignorable="d" 
      d:DesignHeight="900" d:DesignWidth="1200"
      Title="PCustomerHistory">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Border Grid.Row="0" Background="#002B5B" CornerRadius="20" Margin="10,10,10,0">
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0" Margin="20,0,0,0" Content="Lịch sử" FontSize="48" VerticalAlignment="Center" FontFamily="Bahnschrift" FontWeight="Bold" Foreground="#FFF9F5EB"></Label>

        </Grid>
        </Border>

        <ScrollViewer Grid.Row="1">

            <UniformGrid x:Name="ufgWorkedOrders" Columns="3" >
                
            </UniformGrid>
        </ScrollViewer>

    </Grid>
</Page>
